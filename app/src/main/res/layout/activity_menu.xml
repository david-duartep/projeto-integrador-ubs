<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transparent_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="3dp"
        android:layout_marginTop="4dp"
        android:contentDescription="@string/todo"
        app:layout_constraintStart_toStartOf="@+id/textView_menu"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:backgroundTint="#0F3D6F"
        android:text="@string/sair"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_user_profile" />

    <Button
        android:id="@+id/button_schedule"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="100dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/agendar_consultas"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#0F3D6F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/calendar"
        app:iconTint="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_menu" />

    <Button
        android:id="@+id/button_history"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/historico_consultas"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#0F3D6F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/edit"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="@+id/button_consult"
        app:layout_constraintTop_toBottomOf="@+id/button_consult" />

    <Button
        android:id="@+id/button_consult"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/consultas_agendadas"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#0F3D6F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/calendar_checked"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="@+id/button_schedule"
        app:layout_constraintTop_toBottomOf="@+id/button_schedule" />

    <TextView
        android:id="@+id/textView_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginBottom="21dp"
        android:text="@string/ubs"
        android:textColor="#0F3D6F"
        android:textSize="48sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/image_logo"
        app:layout_constraintStart_toStartOf="@+id/image_logo" />

    <TextView
        android:id="@+id/textView_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="@string/menu_principal"
        android:textColor="#2F4C73"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_logo" />

    <Button
        android:id="@+id/button_user_profile"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/perfil_usuario"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#0F3D6F"
        android:textSize="20sp"
        android:textStyle="bold"
        app:icon="@drawable/user"
        app:iconTint="#000000"
        app:layout_constraintStart_toStartOf="@+id/button_history"
        app:layout_constraintTop_toBottomOf="@+id/button_history" />

    <ProgressBar
        android:id="@+id/progressBar_Exit"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_exit" />

</androidx.constraintlayout.widget.ConstraintLayout>